<ui:composition xmlns="http://www.w3.org/1999/xhtml"
                xmlns:h="http://java.sun.com/jsf/html"
                xmlns:f="http://java.sun.com/jsf/core"
                xmlns:ui="http://java.sun.com/jsf/facelets"
                xmlns:p="http://primefaces.org/ui"
                template="/WEB-INF/template.xhtml">

    <ui:define name="title">Message</ui:define>

    <ui:define name="head">
        <style type="text/css">
            .ui-button {
                margin-right: 4px;
            }

            .form-group > div {
                padding: 16px 2px;
            }

            .form-group {
                width: 50%;
            }

            @media (max-width:640px) {
                .form-group {
                    width: 100%;
                }
            }
        </style>
    </ui:define>

    <ui:define name="content">
        <h:form>
            <div class="ui-g">
                <div class="ui-g-12">
                    <div class="card">
                        <h1>Messages</h1>
                        <p:tooltip />

                        <p:messages showDetail="true" autoUpdate="true" closable="true" />

                        <p:commandButton value="Info" actionListener="#{messagesView.info}" style="width:100px; margin-bottom: 10px;" process="@this"/>
                        <p:commandButton value="Warn" actionListener="#{messagesView.warn}"  styleClass="deep-orange-button" style="width:100px; margin-bottom: 10px;" process="@this"/>
                        <p:commandButton value="Error" actionListener="#{messagesView.error}" styleClass="red-button" style="width:100px; margin-bottom: 10px;" process="@this"/>
                        <p:commandButton value="Fatal" actionListener="#{messagesView.fatal}" styleClass="indigo-button" style="width:100px; margin-bottom: 10px;" process="@this"/>

                        <p:growl id="growl" showDetail="true" sticky="true" /> 

                        <div class="ui-g form-group" style="margin-top:10px;">
                            <div class="ui-g-12 ui-lg-2"><p:outputLabel for="default" value="Default:" /></div>
                            <div class="ui-g-12 ui-lg-3"><p:inputText id="default" required="true" /></div>
                            <div class="ui-g-12 ui-lg-7"><p:message for="default" /></div>

                            <div class="ui-g-12 ui-lg-2"><p:outputLabel for="txt" value="Text:" /></div>
                            <div class="ui-g-12 ui-lg-3"><p:inputText id="txt" required="true" /></div>
                            <div class="ui-g-12 ui-lg-7"><p:message for="txt" display="text" /></div>

                            <div class="ui-g-12 ui-lg-2"><p:outputLabel for="icon" value="Icon:" /></div>
                            <div class="ui-g-12 ui-lg-3"><p:inputText id="icon" required="true" /></div>
                            <div class="ui-g-12 ui-lg-7"><p:message for="icon" display="icon" /></div>

                            <div class="ui-g-12 ui-lg-2"><p:outputLabel for="inline" value="Material Error:" /></div>
                            <div class="ui-g-12 ui-lg-3">
                                <h:panelGroup styleClass="md-inputfield"> 
                                    <p:inputText id="inline" required="true" />
                                    <label>Default</label>
                                    <p:message for="inline" />
                                </h:panelGroup>
                            </div>
                            <div class="ui-g-12 ui-lg-7"><p:spacer /></div>

                            <div class="ui-g-12 ui-lg-2"><p:outputLabel for="mtext" value="Material Text Error:" /></div>
                            <div class="ui-g-12 ui-lg-3">
                                <h:panelGroup styleClass="md-inputfield">
                                    <p:inputText id="mtext" required="true" />
                                    <label>Text</label>
                                    <p:message for="mtext" display="text" />
                                </h:panelGroup>
                            </div>
                            <div class="ui-g-12 ui-lg-7"><p:spacer /></div>

                            <div class="ui-g-12 ui-lg-2"><p:outputLabel for="micon" value="Material Icon Error:" /></div>
                            <div class="ui-g-12 ui-lg-3">
                                <h:panelGroup styleClass="md-inputfield">
                                    <p:inputText id="micon" required="true" />
                                    <label>Icon</label>
                                    <p:message for="micon" display="icon" />
                                </h:panelGroup>
                            </div>
                            <div class="ui-g-12 ui-lg-7"><p:spacer /></div>
                        </div>

                        <p:commandButton id="submitButton" value="Submit" actionListener="#{messagesView.growlMessage()}" update="@form" styleClass="GreenButton"/>
                    </div>
                </div>
            </div>
        </h:form>
    </ui:define>

</ui:composition>