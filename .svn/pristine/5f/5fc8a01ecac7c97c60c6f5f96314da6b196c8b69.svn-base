package com.ManagedBeans;

import com.Bean.Setor;
import com.DAO.MetaGastoDAO;
import com.Bean.MetaGasto;
import com.Bean.Usuario;
import com.DAO.SetorDAO;
import com.DAO.UsuarioDAO;
import java.util.Date;
import java.util.LinkedList;
import java.util.List;
import java.io.Serializable;
import javax.faces.context.FacesContext;
import javax.faces.model.SelectItem;
import com.Util.MensagensErros;
import javax.inject.Named;
import javax.enterprise.context.SessionScoped;

/**
 *
 * @author Sergio - 10/10/2021
 */
@Named
@SessionScoped
public class MetaGastoFaces implements Serializable{

    private List<MetaGasto> cachedMetaGastos = null;
    private MetaGastoDAO metaGastoDAO = new MetaGastoDAO();
    private MetaGasto metaGastoSelected;
    private Usuario usuario;
    private Setor setor;

    public Setor getSetor() {
        return setor;
    }

    public void setSetor(Setor setor) {
        this.setor = setor;
    }

    public Usuario getUsuario() {
        return usuario;
    }

    public void setUsuario(Usuario usuario) {
        this.usuario = usuario;
    }

    public MetaGastoDAO getMetaGastoDAO() {
        return metaGastoDAO;
    }

    public void setMetaGastoDAO(MetaGastoDAO metaGastoDAO) {
        this.metaGastoDAO = metaGastoDAO;
    }

    public MetaGasto getMetaGastoSelected() {
        return metaGastoSelected;
    }

    public void setMetaGastoSelected(MetaGasto metaGastoSelected) {
        this.metaGastoSelected = metaGastoSelected;
    }

    public List<MetaGasto> getCachedMetaGastos() {
        if (cachedMetaGastos == null) {
            this.cachedMetaGastos = metaGastoDAO.getMetaGastos();
        }
        return cachedMetaGastos;
    }

    public String doAddMetaGasto() {
        int setor = Integer.parseInt(FacesContext.getCurrentInstance().getExternalContext().getSessionMap().get("setor").toString());
        int usuario = Integer.parseInt(FacesContext.getCurrentInstance().getExternalContext().getSessionMap().get("usuario").toString());
        metaGastoSelected = new MetaGasto(setor, usuario);
        return "metaGastoNew";
    }

    public String dofinishAddMetaGasto() {
        Date date = new Date();
        metaGastoSelected.setDataHoraAtualizacao(date);
        metaGastoDAO.addMetaGasto(metaGastoSelected);
        cachedMetaGastos = null;
        if (MensagensErros.isErro()) {
            return "";
        } else {
            return "metaGastoList";
        }
    }

    public String doRemoveMetaGasto() {
        metaGastoDAO.removeMetaGasto(metaGastoSelected);
        cachedMetaGastos = null;
        if (MensagensErros.isErro()) {
            return "";
        } else {
            return "metaGastoList";
        }
    }

    public String doUpdateMetaGasto() {
        UsuarioDAO usuDAO = new UsuarioDAO();
        usuario = usuDAO.getUsuario(metaGastoSelected.getCodUsuario());
        SetorDAO posDAO = new SetorDAO();
        setor = posDAO.getSetor(metaGastoSelected.getCodSetor());
        return "metaGastoEdit";
    }

    public String dofinishUpdateMetaGasto() {
        Date date = new Date();
        int codUsuario = Integer.parseInt(FacesContext.getCurrentInstance().getExternalContext().getSessionMap().get("usuario").toString());
        metaGastoSelected.setCodUsuario(codUsuario);
        int codSetor = Integer.parseInt(FacesContext.getCurrentInstance().getExternalContext().getSessionMap().get("setor").toString());
        metaGastoSelected.setCodSetor(codSetor);
        metaGastoSelected.setDataHoraAtualizacao(date);
        metaGastoDAO.updateMetaGasto(metaGastoSelected);
        cachedMetaGastos = null;
        if (MensagensErros.isErro()) {
            return "";
        } else {
            return "metaGastoList";
        }
    }

    public String doCancelMetaGasto() {
        cachedMetaGastos = null;
        return "metaGastoList";
    }
}